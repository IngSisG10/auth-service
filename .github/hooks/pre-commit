#!/bin/sh

# Move to the root of the repository
cd "$(git rev-parse --show-toplevel)" || exit 1

# Check for staged Kotlin files
if git diff --cached --name-only | grep -E '\.kt$' > /dev/null; then
  echo "Running ktlintCheck..."
  ./gradlew ktlintCheck
  if [ $? -ne 0 ]; then
    echo "ktlint check failed, running ktlintFormat..."
    ./gradlew ktlintFormat
    exit 1
  fi
else
  echo "No staged Kotlin files, skipping ktlintCheck"
fi
